<h1>All Cities</h1>
<%= form_with url: search_path, method: :get, local: true do |form| %>
  <%= form.label :query, "Search for a city" %>
  <%= form.text_field :query %>
  <%= form.submit "Search" %>
<% end %>

<ul>
  <% @cities.each do |city| %>
    <li><%= link_to city.name, city_path(city) %></li>
  <% end %>
</ul>
